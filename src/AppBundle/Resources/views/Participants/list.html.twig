{% extends "base.html.twig" %}

{% block title %}Merrick Quizz|Participants{% endblock %}

{% block body %}

	<h1>Welcome to the Participants page</h1>
	
  {# Dashboard link #}
  <div>
      <a href="{{ path('questionsList') }}">Manage Quiz</a>
  </div>

  {% for message in app.flashes('success')  %}
    <div class="alert alert-success" role="alert">
        {{ message }}
        <a href="{{ path('quizPage') }}">Play Again</a>
    </div>
  {% endfor %}

	{% if participants != false %}

<table class="table table-striped table-responsive mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Score</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>

  {% for participant in participants %}
    <tr>
      <th scope="row"> {{ loop.index }} </th>
      <td> {{ participant.username }} </td>
      <td> {{ participant.score }} </td>
      <td> {{ participant.savedAt|date('d M Y  H:i') }} </td>
    </tr>

    {% endfor %}
  </tbody>
</table>
{% else %}
	<p> There is no participants for the moment </p>
  <a href="{{ path("quizPage") }}" class="bg-primary start-link">Start quiz now</a>
{% endif%}




{% endblock %}
